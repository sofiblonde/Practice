<Page x:Class="enot.Pages.UserEditOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:enot.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEditOrder"
      Background="#00AB6F">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Редактирование заявки"
                       TextAlignment="Center"
                       Style="{StaticResource TxbStyle}"/>
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Описание проблемы" Style="{StaticResource TxbStyle}"/>
                <TextBox Text="{Binding OrderTroubleDescription}"
                         Style="{StaticResource TxtBox}"
                         Width="200"
                         Height="70"
                         TextWrapping="Wrap"/>
            </StackPanel>
            <Button x:Name="BtnSave" Content="Сохранить"
                    Click="BtnSave_Click" Margin="5"
                    Style="{StaticResource BtnStyle}"/>
        </StackPanel>
    </Grid>
</Page>
